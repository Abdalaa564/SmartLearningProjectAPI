{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
    "JWT": {
        "Issuer": "http://localhost:5163/", //provider
        "Audience": "http://localhost:4200/", //url consumer
        "Secret": "ThisIsASuperStrongJWTSecretKeyForMyWebApp123456!", //"StrONGKAutHENTICATIONKEy"
        "ExpiresInMinutes": 120
    },
  "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Data Source=MENNATULLAH\\SQLEXPRESS;Initial Catalog=Final_Project;Integrated Security=True;Encrypt=False"
    }
}
